APP_NAME="Contact Manager"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com

# ----------------------------------------------------
# Database Configuration (PostgreSQL for Render)
# ----------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=your-db-hostname.render.com
DB_PORT=5432
DB_DATABASE=your_db_name
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# ----------------------------------------------------
# Laravel Defaults
# ----------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ----------------------------------------------------
# Mail (Optional for demo)
# ----------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# ----------------------------------------------------
# Frontend (React/Vue)
# ----------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

# ----------------------------------------------------
# Backpack (Admin Panel)
# ----------------------------------------------------
BACKPACK_BASE_ROUTE_PREFIX=admin
BACKPACK_BASE_MIDDLEWARE_GROUP=web
BACKPACK_AUTH_MIDDLEWARE=backpack.auth
